<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools ="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create User"
        android:textSize="100px"
        android:textColor="@color/white"
        android:layout_alignParentTop = "true"
        android:layout_centerHorizontal = "true"
        android:layout_marginTop="50dp" />

    <EditText
        android:id="@+id/fname1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="110dp"
        android:layout_marginRight="40dp"
        android:backgroundTint="@android:color/white"
        android:drawableStart="@drawable/pencil"
        android:drawablePadding="5sp"
        android:textColor="@color/white"
        android:gravity="start"
        android:hint="First name"
        android:inputType="text"
        android:textColorHint="#8e9094"
        android:textCursorDrawable="@null"
        android:textSize="18dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last name"
        android:textCursorDrawable="@null"
        android:drawableStart="@drawable/pencil"
        android:backgroundTint="@android:color/white"
        android:textColorHint="#8e9094"
        android:drawablePadding="5sp"
        android:inputType="text"
        android:textColor="@color/white"
        android:layout_marginRight="40sp"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="170dp"
        android:id="@+id/lname1"
        android:textSize="18dp"
        android:gravity="start" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textColor="@color/white"
        android:drawableStart="@drawable/account"
        android:drawablePadding="5sp"
        android:layout_marginRight="40sp"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="230dp"
        android:id="@+id/genderLabel"
        android:textSize="18sp"
        android:gravity="start" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/genderLabel"
        android:layout_marginTop="0sp"
        android:weightSum="1"
        android:id="@+id/gender1"
        android:layout_alignLeft="@+id/lname1"
        android:layout_alignStart="@+id/lname1"
        android:layout_alignRight="@+id/genderLabel"
        android:layout_alignEnd="@+id/genderLabel">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textColor="@color/white"
            android:id="@+id/male"
            android:checked="false"
            android:textSize="15sp" />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textColor="@color/white"
            android:id="@+id/female"
            android:checked="false"
            android:textSize="15dp" />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Non-binary"
            android:textColor="@color/white"
            android:id="@+id/nonbinary"
            android:checked="false"
            android:textSize="15dp" />

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Age"
        android:textColor="@color/white"
        android:drawableStart="@drawable/account"
        android:drawablePadding="5sp"
        android:layout_marginRight="40sp"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="410dp"
        android:id="@+id/ageLabel"
        android:textSize="18sp"
        android:gravity="start" />

    <NumberPicker
        android:id="@+id/age1"
        android:layout_width="wrap_content"
        android:layout_height="60sp"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="440sp"
        android:layout_marginRight="40sp"
        android:drawablePadding="5sp"
        android:gravity="start"
        android:inputType="number"
        android:textSize="18sp"
        android:theme="@style/AppTheme.Picker" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CREATE"
        android:id="@+id/create"
        android:textAllCaps="false"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="520dp"
        android:textColor="#d3d8e3"
        android:textSize="20dp"
        android:background="@drawable/round_button"
        android:gravity="center"/>

</RelativeLayout>