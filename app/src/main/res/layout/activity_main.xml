<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/timeBtn"
        android:layout_width="300sp"
        android:layout_height="75sp"
        android:layout_marginTop="50dp"
        android:text="Toggle Time"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/capBtn"
        android:layout_width="300sp"
        android:layout_height="75sp"
        android:layout_marginTop="20dp"
        android:text="Capture"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeBtn" />
    <Button
        android:id="@+id/continueBtn"
        android:layout_width="300sp"
        android:layout_height="75sp"
        android:layout_marginTop="20dp"
        android:text="I'm Ready"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeBtn" />

    <ImageView
        android:layout_width="375dp"
        android:layout_height="325dp"
        android:id="@+id/loading"
        android:visibility="invisible"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/continueBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ListView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/linksListView"
        app:layout_constraintTop_toBottomOf="@id/capBtn"
        app:layout_constraintLeft_toLeftOf="@id/capBtn"
        android:layout_marginTop="25dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>